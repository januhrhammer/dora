# Environment variables for Docker Compose
# Copy this file to .env and fill in your actual values

# Mailjet Email Configuration
# Sign up at https://www.mailjet.com/ and get your API keys from:
# https://app.mailjet.com/account/apikeys

# Mailjet API credentials
MAILJET_API_KEY=your_mailjet_api_key_here
MAILJET_API_SECRET=your_mailjet_api_secret_here

# Sender email (must be verified in Mailjet - see Mailjet Account Settings > Sender Addresses)
FROM_EMAIL=your-verified-sender@example.com
FROM_NAME=Medicine Tracker

# Recipient email (who receives the reminders)
TO_EMAIL=recipient@example.com
TO_NAME=Grandma